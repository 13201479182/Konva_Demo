{
    "files.exclude": {
        ".vscode": true,
        ".editorconfig": true,
        ".npmrc": true,
        "package-lock.json": true,
        ".prettierignore": true,
        ".gitignore": true,
        ".prettierrc.cjs": true,
        ".eslintrc.cjs": true,
        ".eslintignore": true,
        "tsconfig.json": true
    },

    "editor.formatOnSave": true,
    "files.autoSave": "onFocusChange",
    "editor.defaultFormatter": "dbaeumer.vscode-eslint",

    // eslint相关配置
    "eslint.enable": true,
    "eslint.probe": ["javascript", "typescript", "vue", "markdown"],

    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[css]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[less]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },

    // 代码片段配置
    "launch": {
        "Print to console": {
            "prefix": "v",
            "body": [
                "${BLOCK_COMMENT_START}",
                " * @author: 刘汇源lwx188666",
                " * @since: ${CURRENT_YEAR}-${CURRENT_MONTH}-${CURRENT_DATE}",
                " * ${TM_FILENAME}",
                "${BLOCK_COMMENT_END}",
                "<template>",
                "    <div class=\"${1:contanier}\"></div>",
                "</template>",
                "",
                "<script setup lang=\"ts\"></script>",
                "",
                "<style scoped></style>",
                ""
            ],
            "description": "Log output to console"
        }
    }
}
